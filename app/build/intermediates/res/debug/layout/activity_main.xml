<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/app_sub_title"
        android:id="@+id/app_sub_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="showMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_app"
        android:id="@+id/first_app_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/app_sub_title"
        android:onClick="showMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_app"
        android:id="@+id/second_app_button"
        android:layout_below="@+id/first_app_button"
        android:layout_alignEnd="@+id/third_app_button"
        android:onClick="showMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/third_app"
        android:id="@+id/third_app_button"
        android:layout_below="@+id/second_app_button"
        android:layout_centerHorizontal="true"
        android:onClick="showMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fourth_app"
        android:id="@+id/fourth_app_button"
        android:layout_below="@+id/third_app_button"
        android:layout_centerHorizontal="true"
        android:onClick="showMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capstone_app"
        android:id="@+id/button6"
        android:layout_below="@+id/fifth_app_button"
        android:layout_centerHorizontal="true"
        android:onClick="showMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fifth_app"
        android:id="@+id/fifth_app_button"
        android:layout_below="@+id/fourth_app_button"
        android:layout_centerHorizontal="true"
        android:onClick="showMessage"/>
</RelativeLayout>
